<?xml version="1.0" encoding="utf-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ch17_javafx.exec.AddFormController">
    <center>
        <GridPane hgap="10.0" vgap="10.0">
            <padding>
                <Insets topRightBottomLeft="10.0"/>
            </padding>
            <children>
                <Label text="이름" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="국어"  GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField  fx:id="koreanField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="수학"  GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="mathField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="영어"  GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="englishField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <children>
                <Button fx:id="saveButton" text="저장"/>
                <Button fx:id="cancelButton" text="취소"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
