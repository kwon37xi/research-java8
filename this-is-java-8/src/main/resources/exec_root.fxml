<?xml version="1.0" encoding="utf-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300"
            fx:controller="ch17_javafx.exec.RootController">
    <center>
        <TableView fx:id="gradeTable" id="gradeTable">
            <columns>
                <TableColumn text="이름" prefWidth="100"/>
                <TableColumn text="국어" prefWidth="100"/>
                <TableColumn text="수학" prefWidth="100"/>
                <TableColumn text="영어" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <children>
                <Button fx:id="addButton" text="추가" />
            </children>
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
